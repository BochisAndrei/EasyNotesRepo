<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/folder_name"
        android:onClick="addFolder"
        android:background="@drawable/rounded_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/note_name"
        android:onClick="addTextNote"
        android:background="@drawable/rounded_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/crossnote_name"
        android:onClick="addCrossNote"
        android:background="@drawable/rounded_button"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/audio_name"
        android:onClick="addAudio"
        android:background="@drawable/rounded_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/image_name"
        android:onClick="addImage"
        android:background="@drawable/rounded_button"/>

</LinearLayout>